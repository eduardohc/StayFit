<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="personal_information_background" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/grirish</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">30dp</item>
    </style>

    <!--
    Styles for register, login and reset password
    -->

    <style name="layoutStyleRegister">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/register_color</item>
        <item name="android:padding">30dp</item>
    </style>

    <style name="linearStyleMember">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="etStyleRegister">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="etStyleRegister.username">
        <item name="android:inputType">textNoSuggestions</item>

    </style>

    <style name="etStyleRegister.email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:hint">@string/email</item>
    </style>

    <style name="etStyleRegister.password">
        <item name="android:inputType">textPassword</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:hint">@string/password</item>
    </style>

    <style name="etStyleRegister.btn">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/btn_enter</item>
    </style>

    <style name="tvMember">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvMember.status">
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <!--
    Styles for personal information layouts
    -->

    <style name="linearlayout_for_personalinformation">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">30dp</item>
    </style>

    <style name="textView_topic">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#919191</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textView_information_options">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="linearlayout_adapter">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="chtvs_personal_information">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:checked">false</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
        <item name="android:checkMark">@drawable/checkbox_status</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--
    Style for weight and height layout
    -->
    <style name="editText.weight_height">
        <item name="android:layout_width">0dp</item>
        <item name="android:inputType">number</item>
    </style>

    <!--
    Style for date_of_birth.xml
    -->
    <style name="linearLayout_birthdate">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:ems">2</item>
    </style>

    <style name="editText.birthdate">
        <item name="android:inputType">number</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="np_selectBirthDate">
        <item name="android:textColor">@color/black</item>
    </style>
    <!--
    Style for level_activity xml file
    -->
    <style name="linearlayout_adapter.level_activity">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="textView_level_activity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="chtvs_personal_information.level_activity">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>
