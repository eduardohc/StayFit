<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_information_background">

    <TextView
        style="@style/textView_topic"
        android:text="@string/select_date_birth" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal" >

        <NumberPicker
            style="@style/np_selectBirthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/np_day" />

        <NumberPicker
            style="@style/np_selectBirthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/np_mounth"
            android:layout_gravity="center_horizontal" />

        <NumberPicker
            style="@style/np_selectBirthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/np_year"
            android:layout_gravity="right" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="My birth date is: "
        android:id="@+id/show_birth_date"
        android:layout_gravity="center_vertical" />

</LinearLayout>